{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Provia BASE",
  "version": "1.0.0",
  "identifier": "com.provia.base",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Provia BASE",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "category": "Business",
    "shortDescription": "CRM Premium pour la gestion d'entreprise",
    "longDescription": "Provia BASE est un CRM moderne avec design iOS glassmorphism pour gerer vos clients, devis, factures et equipe.",
    "copyright": "Copyright 2024 Provia"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
